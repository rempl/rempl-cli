{
    "compilerOptions": {
        "strict": true,
        "declaration": true,
        "declarationDir": "./lib",
        "sourceMap": true,
        "outDir": "./dist",
        "module": "ES2020",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "target": "ES6",
        "lib": ["DOM", "ESNext"],
        "allowJs": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "lib"]
}
